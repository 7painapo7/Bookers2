<h2>プロフィール編集</h2>
</div>
<div>
	<%= form_for(@user) do |f| %>
	<div>
		<label for="inputEmail">Name</label>
		<%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
		<span aria-hidden="true"></span>
	</div>

	<div>
		<div>
			<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
		</div>
		<label for="inputEmail">ProfileImage</label>
		<%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
	</div>

	<div>
		<label for="">Introduction</label>
		<%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail"%>
		<span aria-hidden="true"></span>
	</div>
	<%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
	<% end %>