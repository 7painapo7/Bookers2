<p>usersのindexページ</p>

<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<h4>name</h4>
<h4><%= @user.name %></h4>
<h4>introduction</h4>
<h4><%= @user.introduction %></h4>
<% if @user.id == current_user.id %>
<p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>


<h2>New book</h2>
<%= form_for(@book) do |f| %>

  <% if @book.errors.any? %>
  <h2><%= @book.errors.count %>errors prohibited this book from being saved:</h2>
  <% @book.errors.full_messages.each do |message| %>
            <%= message %>
    <% end %>
  <% end %>

  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <h4><%= f.submit 'Create Book' %></h4>
<% end %>

<h2>Users</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= attachment_image_tag user, :profile_image, size: "40×40", format: 'jpeg', class: "profile-img", fallback: "no_image.jpg" %></td>
      <td><%= user.name %></td>
      <td><%= link_to "Show", user_path(user.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>