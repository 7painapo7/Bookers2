<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<h3><%= @book_show.user.name %></h3>
<p><%= link_to "プロフィール編集", edit_user_path(@book_show.user) %></p>




<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>



<h3><%= @book_show.user.name %></h3>
<td><%= @book_show.title %></td>
<td><%= @book_show.body %></td>
<%= link_to "Edit", edit_book_path(@book_show.user) %>
<%= link_to "Destroy", book_path(@book_show.id), method: :delete,data: { confirm: '本当に消しますか？' } %>