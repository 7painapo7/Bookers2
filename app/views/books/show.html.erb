<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %>
<h3><%= @user.name %></h3>
<% if @user.id == current_user.id %>
<p><%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %></p>
<% end %>



<h1>New book</h1>
<!-- form_for部分 -->
<%= form_for(@booknew) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>



<h3><%= @user.name %></h3>
<td><%= @book.title %></td>
<td><%= @book.body %></td>
<%= link_to "Edit", edit_book_path(@book) %>
<%= link_to "Destroy", book_path(@book.id), method: :delete,data: { confirm: '本当に消しますか？' } %>