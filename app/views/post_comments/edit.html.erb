<div class="container">

	<% if @comment.errors.any? %>
	<h2><%= @comment.errors.count %>errors prohibited this book from being saved:</h2>
	<% @comment.errors.full_messages.each do |message| %>
	<%= message %>
	<% end %>
	<% end %>

	<div class='col-md-6 col-md-offset-3'>

		<h1>Editing Comment</h1>
		<!-- form_forだとcreateアクションにデフォルトで繋がるので指定先を変えてあげる -->
		<!-- createアクションの@commentを探しに行ってる状態 -->
		<%= form_for @comment,url:book_post_comment_path(@book.id) do |f| %>

		<div class="row">
			<label>Title</label>
			<%= f.text_field :comment, class:"col-xs-12 book_title" %>
		</div>

		<div class="row">
			<%= f.submit 'Update', class:"btn btn-primary col-xs-12" %>
		</div>
		<% end %>

	</div>
</div>